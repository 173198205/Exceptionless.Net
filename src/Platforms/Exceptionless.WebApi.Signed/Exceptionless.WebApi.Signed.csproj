<Project Sdk="Microsoft.NET.Sdk">
  <Import Project="..\..\..\build\common.props" />

  <PropertyGroup>
    <PackageId>Exceptionless.WebApi.Signed</PackageId>
    <AssemblyName>Exceptionless.WebApi.Signed</AssemblyName>
    <AssemblyTitle>Exceptionless client for ASP.NET Web API applications.</AssemblyTitle>
    <Description>Exceptionless client for ASP.NET Web API applications. $(Description)</Description>
    <TargetFramework>net45</TargetFramework>
    <PackageTags>Web Api;Exceptionless;Error;Report;Reporting;Exception;Logging;Log;ELMAH</PackageTags>
    <AssemblyOriginatorKeyFile>..\..\Exceptionless.snk</AssemblyOriginatorKeyFile>
  </PropertyGroup>

  <ItemGroup>
    <None Update="..\Exceptionless.WebApi\NuGet\tools\*">
      <PackagePath>tools\</PackagePath>
      <Pack>true</Pack>
    </None>
    <None Update="..\..\Exceptionless.Signed\NuGet\tools\exceptionless.psm1">
      <PackagePath>tools\exceptionless.psm1</PackagePath>
      <Pack>true</Pack>
    </None>
    <None Update="..\Exceptionless.WebApi\readme.txt">
      <Pack>true</Pack>
    </None>
  </ItemGroup>

  <ItemGroup>
    <Compile Include="..\..\GlobalAssemblyInfo.cs" Link="Properties\GlobalAssemblyInfo.cs" />
    <ProjectReference Include="..\..\Exceptionless\Exceptionless.Signed.csproj" />
  </ItemGroup>

  <ItemGroup>
    <PackageReference Include="Microsoft.AspNet.WebApi.Core" Version="5.2.3" />
  </ItemGroup>

  <PropertyGroup Condition=" '$(TargetFramework)' == 'net45' ">
    <DefineConstants>$(DefineConstants);NET45;SIGNED;</DefineConstants>
  </PropertyGroup>

  <ItemGroup Condition=" '$(TargetFramework)' == 'net45' ">
    <Reference Include="System.Configuration" />
    <Reference Include="System.Net.Http" />
    <Reference Include="System.ServiceModel" />
    <Reference Include="System" />
    <Reference Include="Microsoft.CSharp" />
  </ItemGroup>
</Project>