<Project Sdk="Microsoft.NET.Sdk">
  <Import Project="..\..\..\build\common.props" />

  <PropertyGroup>
    <PackageId>Exceptionless.Mvc.Signed</PackageId>
    <AssemblyName>Exceptionless.Mvc.Signed</AssemblyName>
    <AssemblyTitle>Exceptionless client for ASP.NET MVC 3+ applications.</AssemblyTitle>
    <Description>Exceptionless client for ASP.NET MVC 3+ applications. $(Description)</Description>
    <TargetFramework>net45</TargetFramework>
    <PackageTags>MVC;ASP.NET;Exceptionless;Error;Report;Reporting;Exception;Logging;Log;ELMAH</PackageTags>
    <AssemblyOriginatorKeyFile>..\..\Exceptionless.snk</AssemblyOriginatorKeyFile>
  </PropertyGroup>

  <ItemGroup>
    <None Update="..\Exceptionless.Mvc\NuGet\tools\*">
      <PackagePath>tools\</PackagePath>
      <Pack>true</Pack>
    </None>
    <None Update="..\..\Exceptionless.Signed\NuGet\tools\exceptionless.psm1">
      <PackagePath>tools\exceptionless.psm1</PackagePath>
      <Pack>true</Pack>
    </None>
    <None Update="..\Exceptionless.Mvc\readme.txt">
      <Pack>true</Pack>
    </None>
  </ItemGroup>
  
  <ItemGroup>
    <Compile Include="..\..\GlobalAssemblyInfo.cs" Link="Properties\GlobalAssemblyInfo.cs" />
    <Compile Include="..\Exceptionless.Web\ExceptionlessClientExtensions.cs;..\Exceptionless.Web\ExceptionlessWebExtensions.cs;..\Exceptionless.Web\ExceptionlessWebPlugin.cs;..\Exceptionless.Web\RequestInfoCollector.cs;..\Exceptionless.Web\WebLastReferenceIdManager.cs" Exclude="bin\**;obj\**;**\*.xproj;packages\**" />

    <ProjectReference Include="..\..\Exceptionless\Exceptionless.Signed.csproj" />
  </ItemGroup>

  <ItemGroup>
    <PackageReference Include="Microsoft.AspNet.Mvc" Version="3.0.20105.1" />
  </ItemGroup>

  <PropertyGroup Condition=" '$(TargetFramework)' == 'net45' ">
    <DefineConstants>$(DefineConstants);NET45;SIGNED;</DefineConstants>
  </PropertyGroup>

  <ItemGroup Condition=" '$(TargetFramework)' == 'net45' ">
    <Reference Include="System.Configuration" />
    <Reference Include="System.Web" />
    <Reference Include="System" />
    <Reference Include="Microsoft.CSharp" />
  </ItemGroup>
</Project>